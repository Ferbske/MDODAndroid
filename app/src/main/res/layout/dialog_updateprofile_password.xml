<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dialogUpdateProfilePassword_textViewCurrentPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Current password"
        app:layout_constraintEnd_toEndOf="@+id/dialogUpdateProfilePassword_editTextCurrentPassword"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/dialogUpdateProfilePassword_editTextCurrentPassword"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialogUpdateProfilePassword_textViewNewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="New password"
        app:layout_constraintEnd_toEndOf="@+id/dialogUpdateProfilePassword_editTextNewPassword"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/dialogUpdateProfilePassword_editTextNewPassword"
        app:layout_constraintTop_toBottomOf="@+id/dialogUpdateProfilePassword_editTextCurrentPassword" />

    <EditText
        android:id="@+id/dialogUpdateProfilePassword_editTextNewPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialogUpdateProfilePassword_textViewNewPassword" />

    <EditText
        android:id="@+id/dialogUpdateProfilePassword_editTextConfirmPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialogUpdateProfilePassword_textViewConfirmPassword"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/dialogUpdateProfilePassword_textViewConfirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Confirm new password"
        app:layout_constraintEnd_toEndOf="@+id/dialogUpdateProfilePassword_editTextConfirmPassword"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/dialogUpdateProfilePassword_editTextConfirmPassword"
        app:layout_constraintTop_toBottomOf="@+id/dialogUpdateProfilePassword_editTextNewPassword" />

    <EditText
        android:id="@+id/dialogUpdateProfilePassword_editTextCurrentPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialogUpdateProfilePassword_textViewCurrentPassword" />

    <TextView
        android:id="@+id/dialogUpdateProfilePasswor_textViewIncorrectCurrentPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:text="Password is incorrect!"
        android:textColor="@color/coloraccent"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/dialogUpdateProfilePassword_textViewCurrentPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/dialogUpdateProfilePassword_textViewCurrentPassword"
        app:layout_constraintTop_toTopOf="@+id/dialogUpdateProfilePassword_textViewCurrentPassword" />

    <TextView
        android:id="@+id/dialogUpdateProfilePassword_textViewIncorrectNewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:text="Too short!"
        android:textColor="@color/coloraccent"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/dialogUpdateProfilePassword_textViewNewPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/dialogUpdateProfilePassword_textViewNewPassword"
        app:layout_constraintTop_toTopOf="@+id/dialogUpdateProfilePassword_textViewNewPassword" />

    <TextView
        android:id="@+id/dialogUpdateProfilePassword_textViewIncorrectConfirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:text="Passwords do not match!"
        android:textColor="@color/coloraccent"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/dialogUpdateProfilePassword_textViewConfirmPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/dialogUpdateProfilePassword_textViewConfirmPassword"
        app:layout_constraintTop_toTopOf="@+id/dialogUpdateProfilePassword_textViewConfirmPassword" />

</android.support.constraint.ConstraintLayout>