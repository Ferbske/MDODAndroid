<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConsumptionDetailActivity">

    <TextView
        android:id="@+id/activityConsumptionDetail_textViewHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@color/coloraccent"
        android:padding="8dp"
        android:text="[Type]"
        android:textAlignment="viewStart"
        android:textAppearance="@android:style/TextAppearance.Material.Headline"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/act_consumptionDetail_imageViewType"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activityConsumptionDetail_textViewHeader"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/act_consumptionDetail_textViewTimeStampField"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="[Timestamp]"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/act_consumptionDetail_imageViewType"
        app:layout_constraintTop_toBottomOf="@+id/act_consumptionDetail_textViewTimeStampLabel" />

    <TextView
        android:id="@+id/act_consumptionDetail_textViewAmountValueField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="[Amount]"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/act_consumptionDetail_imageViewType"
        app:layout_constraintStart_toEndOf="@+id/act_consumptionDetail_imageViewType" />

    <TextView
        android:id="@+id/act_consumptionDetail_textViewDescField"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="[Description]"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/act_consumptionDetail_textViewDescLabel" />

    <TextView
        android:id="@+id/act_consumptionDetail_textViewTimeStampLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="When?"
        android:textColor="@color/coloraccent"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/act_consumptionDetail_imageViewType"
        app:layout_constraintTop_toBottomOf="@+id/activityConsumptionDetail_textViewHeader" />

    <TextView
        android:id="@+id/act_consumptionDetail_textViewAmountLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="How much?"
        android:textColor="@color/coloraccent"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/act_consumptionDetail_textViewAmountValueField"
        app:layout_constraintStart_toEndOf="@+id/act_consumptionDetail_imageViewType" />

    <TextView
        android:id="@+id/act_consumptionDetail_textViewDescLabel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="Description:"
        android:textColor="@color/coloraccent"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/act_consumptionDetail_imageViewType" />

    <TextView
        android:id="@+id/act_consumptionDetail_textViewAmountTypeField"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="[AmountType]"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/act_consumptionDetail_textViewAmountValueField"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.025"
        app:layout_constraintStart_toEndOf="@+id/act_consumptionDetail_textViewAmountValueField" />

</android.support.constraint.ConstraintLayout>